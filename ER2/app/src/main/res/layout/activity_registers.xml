<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistersActivity">


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_abdoliteX="8dp"
        tools:layout_editor_absoluteY="8dp"

        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">


            <TextView
                android:id="@+id/editTextIdpatientforme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="PATIENT FORME"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextIdfirstname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="First name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editTextIdlastname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="Last name"
                android:padding="10dp" />
            <EditText
                android:id="@+id/editTextIdPersonumber"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="Personnumber"
                android:padding="10dp" />
            <RadioButton
                android:id="@+id/editTextIdmale"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Male"
                android:orientation="horizontal"/>
            <RadioButton
                android:id="@+id/editTextIdfemale"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:text="Female"
                />
            <EditText
                android:id="@+id/editTextId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="phone"
                android:hint="Phone number"
                android:padding="10dp" />
            <EditText
                android:id="@+id/editTextIdaddress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editTextIdemailaddress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <TextView
                android:id="@+id/editTextIdplaeseenter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="PLEASE ENTER PATIENT'S SYPMTOMS"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextIddescription"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textAutoCorrect"
                android:padding="10dp" />






















        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>